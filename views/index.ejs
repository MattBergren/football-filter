<% include partials/header %>
<header>
        <h1>2017 NFC Leaders</h1>
    </header>
<div class="ui container">
    
    <div class="ui stackable grid">
        <div class="five wide column">
            <aside>
                <div class="ui sub header">Filter by</div>
                <select class="ui fluid search dropdown" id="team-select" name="teams">
                <option value="all">All teams</option>
                <% teams.forEach(function(team){ %>
                    <option value="<%=team._id%>"><%=team.city%>&nbsp;<%=team.name%></option> 
                <% });%>
                </select>
                <div class="ui form">
                    <div class="grouped fields">
                      <label>Filter by position</label>
                      <div class="field">
                        <div class="ui radio checkbox">
                          <input type="radio" name="example2" checked="checked">
                          <label>Once a week</label>
                        </div>
                      </div>
                      <div class="field">
                        <div class="ui radio checkbox">
                          <input type="radio" name="example2">
                          <label>2-3 times a week</label>
                        </div>
                      </div>
                      <div class="field">
                        <div class="ui radio checkbox">
                          <input type="radio" name="example2">
                          <label>Once a day</label>
                        </div>
                      </div>
                      <div class="field">
                        <div class="ui radio checkbox">
                          <input type="radio" name="example2">
                          <label>Twice a day</label>
                        </div>
                      </div>
                    </div>
                  </div>
                <div class="ui toggle checkbox">
                    <input type="checkbox" name="public">
                    <label>All Pro</label>
                  </div>
            </aside>
        </div>
        <div class="eleven wide column">
            <main id="team-list">
                <div class="ui cards">
                    <% players.forEach(function(player){ %>
                    <div class="card">
                        <div class="content">
                            <div class="header"><%=player.firstName%>&nbsp;<%=player.lastName%></div>
                            <div class="meta">
                                <% teams.forEach(function(team){ %>
                                    <% if(team._id === player.team_id) { %>
                                        <%=team.name%>
                                    <% } %>
                                <% });%>
                            </div>
                        </div>
                    </div>
                    <% });%>
                </div>
            </main>
        </div>
    </div>
    
  
</div>

<% include partials/footer %>